<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="PomodorosApp.Views.DashboardView"
            xmlns:views="clr-namespace:PomodorosApp.Views"
            Title="Pomodoros">


    <TabbedPage.Children>
        <NavigationPage Title="Working">
            <x:Arguments>
                <views:WorkingView BindingContext="{Binding WorkingVM}"/>
            </x:Arguments>
        </NavigationPage>
        
        <NavigationPage Title="Summary">
            <x:Arguments>
                <views:SummaryView />
            </x:Arguments>
        </NavigationPage>
        
        <NavigationPage Title="Settings">
            <x:Arguments>
                <views:SettingsView />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
    
    
</TabbedPage>