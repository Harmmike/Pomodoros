<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PomodorosApp.Views.SummaryView">

    <ContentPage.Content>

        <StackLayout>

            <Label Text="Completed Pomodoros Sets" FontSize="Large" HorizontalTextAlignment="Center" />

            <ListView ItemsSource="{Binding SavedSets}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding  Pomodoros.Count}" />
                                    <Label Text="{Binding Date}" />
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackLayout>

    </ContentPage.Content>
    
</ContentPage>